<h3>{{data.id ? 'Edit' : 'Create'}} <%= entity.nameOrigin %></h3>

<div class="alert alert-danger" *ngIf="errorMessage">
    {{errorMessage}}
</div>

<form [formGroup]="form">
<% [...(entity.attributesCombined || entity.attributes), ...(entity.generalizationLinksTo ? entity.generalizationLinksTo.attributesCombined : [])].filter(x => x.name).forEach((attr) => { %>
    <%- include('field.html.ejs', {field: attr, parent: entity, prefix: attr.name}) -%>
<% }) %>
</form>

<a routerLink="../">Return back</a>
<div class="float-right">
    <button class="btn btn-danger" (click)="delete()" *ngIf="data.id">Delete</button>&nbsp;
    <button class="btn btn-primary" (click)="save()" [disabled]="!form.valid">Save</button>
</div>
