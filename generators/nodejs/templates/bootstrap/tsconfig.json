{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "typings.d.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
