{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "types": ["node"],
    "composite": true,
    "paths": {
        "generator-xmi-core/*": [ "packages/core/*" ],
        "generator-xmi-common/*": [ "generators/common/*" ],
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts"]
}
